<div class="col mb-4">
  <div class="card card-block">
    <%= link_to(image_tag(video.image, class: "card-img-top"), video) %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to video.name, video %></h5>
      <p class="card-text"><%= truncate video.description %></p>
      <%= link_to "Watch", video.sources.first.url, class: "btn btn-primary", target: :blank %>
      <div class="btn-group">
        <%= link_to "Edit", edit_video_path(video), class: "btn btn-info" %>
        <%= link_to 'Destroy', video, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  </div>
</div>