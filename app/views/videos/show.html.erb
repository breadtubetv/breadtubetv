<%= content_for :title, t("titles.videos.show", name: @video.name) %>

<div class="container-fluid mt-4">
  <div class="row">
    <div class="col col-sm-8 col-md-9">
      <% @video.sources.each do |source| %>
        <div class="embed-responsive embed-responsive-16by9" style="max-height: 100vh">
          <iframe class="embed-responsive-item" src="<%= source.embed_url %>" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
      <% end %>

      <div class="row mt-4" style="overflow: hidden">
        <div class="col-12 col-md-9 col-lg-10 mb-3">
          <h1 class="h4 font-weight-bold">
            <%= @video.name.html_safe %>
          </h1>
          
          <%= simple_format @video.description %>

          <%= link_to 'Edit', edit_channel_video_path(@video.channel, @video) %> |
          <%= link_to 'Back', videos_path %>

          <% if Rails.env.development? %>
            <%= link_to 'Sync', sync_channel_video_path(@channel, @video) %>
          <% end %>

          <br />
          <div>
            <%= @video.youtube.inspect %>
          </div>

          <p>
            <ul>
              <% @video.tags.each do |tag| %>
                <li><%= tag %></li>
              <% end %>
            </ul>
          </p>
        </div>

        <div class="col-12 col-md-3 col-lg-2">
          <select>
            <% @video.sources.each do |source| %>
              <option>Playing From: <%= source.kind %></option>
            <% end %>
          </select>

          <div style="overflow: hidden" class="mt-4">
            <div class="float-left">
              <h5 class="mb-0">
                <small>
                  <%= link_to @video.channel.name, @video.channel %>
                </small>
              </h5>
              <p class="mt-0">
                <small>
                  <%= @video.published_at %>
                </small>
              </p>
            </div>
            <%= logo_tag @video.channel.image %>
          </div>
          <p>
            <%= @video.channel.description %>
          </p>

        </div>
      </div>
    </div>
    <div class="col-12 col-sm-4 col-md-3">
      <%= render @videos, locals: { simple: true } %>
    </div>
  </div>
</div>