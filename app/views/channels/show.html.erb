<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @channel.image %>
</p>

<p>
  <strong>Name:</strong>
  <%= @channel.name %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @channel.slug %>
</p>

<p>
  <strong>Description:</strong>
  <%= @channel.description %>
</p>

<p>
  <strong>Sources:</strong>
  <ul>
    <% @channel.sources.each do |source| %>
      <li><%= link_to source.kind, source.url %></li>
    <% end %>
  </ul>
</p>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">
  <% @channel.posts.each do |post| %>
    <%= render post %>
  <% end %>
</div>

<%= link_to 'Edit', edit_channel_path(@channel) %> |
<%= link_to 'Back', channels_path %>
