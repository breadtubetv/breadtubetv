<div class="col mb-4">
  <div class="card card-block">
    <%= link_to(image_tag(post.image, class: "card-img-top"), post) %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to post.name, post %></h5>
      <p class="card-text"><%= truncate post.description %></p>
      <%= link_to "Watch", post.source_url, class: "btn btn-primary", target: :blank %>
      <div class="btn-group">
        <%= link_to "Edit", edit_post_path(post), class: "btn btn-info" %>
        <%= link_to 'Destroy', post, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  </div>
</div>